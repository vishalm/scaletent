# ScaleTent - Meet & Greet System Configuration

# System settings
system:
  name: "ScaleTent"
  version: "1.0.0"
  log_level: "INFO"
  log_dir: "logs"
  log_file: "logs/app.log"
  device: "cpu"

# API settings
api:
  rest:
    host: "127.0.0.1"
    port: 8000
  websocket:
    host: "127.0.0.1"
    port: 8001
    use_ssl: false

# Web interface settings
web:
  host: "127.0.0.1"
  port: 5000
  theme: "light"

# Detection settings
detection:
  model_path: "models/detection/yolov8n.pt"
  confidence_threshold: 0.5
  nms_threshold: 0.45
  device: "cpu"
  classes: [0]  # 0 = person in COCO dataset
  processing_fps: 15

# Recognition settings
recognition:
  model_path: "models/recognition/facenet.pt"
  similarity_threshold: 0.6
  face_detection_threshold: 0.6
  backend: "facenet"
  device: "cpu"

# Storage settings
storage:
  database:
    type: "sqlite"
    path: "data/config.db"
  faces: "data/faces"
  save_detection_images: false
  detection_image_path: "data/detections"
  save_recognized_images: true
  recognized_image_path: "data/recognized"

# Privacy settings
privacy:
  data_retention_days: 30
  face_blur_in_recordings: true
  consent_required: true
  store_recognized_faces: false
  store_unknown_faces: false
  log_sensitivity: "medium"

# Advanced settings
advanced:
  performance_mode: "balanced"
  debug:
    save_debug_frames: false
    debug_frame_path: "debug/frames"
    profile_performance: false
    visualize_detections: true

# Camera settings
cameras:
  - id: "mac-camera"
    name: "MacBook Camera"
    source: "0"
    width: 1280
    height: 720
    fps: 30
    processing_fps: 10
    enabled: true 